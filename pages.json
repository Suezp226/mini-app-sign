{
	"easycom": {
		// npm安装的方式不需要前面的"@/"，下载安装的方式需要"@/"
		// npm安装方式
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
		// 下载安装方式
		// "^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "收货网签程序",
				"disableScroll": true
			}
		},
		{
			"path": "pages/center/center",
			"style": {
				"navigationBarTitleText": "个人中心",
				"disableScroll": true
			}
		},
		{
			"path": "pages/sendOrder/sendOrder",
			"style": {
				"navigationBarTitleText": "发送订货单",
				"disableScroll": true
			}
		},
		{
			"path": "pages/sendShipments/sendShipments",
			"style": {
				"navigationBarTitleText": "发送发货单",
				"disableScroll": true
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "",
				"disableScroll": true
			}
		},
		{
			"path": "pages/authentication/authentication",
			"style": {
				"navigationBarTitleText": "身份认证",
				"disableScroll": true
			}
		},
		{
			"path": "pages/confirmOrder/confirmOrder",
			"style": {
				"navigationBarTitleText": "确认订单",
				"disableScroll": true
			}
		},
		{
			"path": "pages/historyOrderList/historyOrderList",
			"style": {
				"navigationBarTitleText": "历史订单",
				"disableScroll": true
			}
		},
		{
			"path": "pages/signIn/signIn",
			"style": {
				"navigationBarTitleText": "货物签收",
				"disableScroll": true
			}
		},
		{
			"path": "pages/startRunning/startRunning",
			"style": {
				"navigationBarTitleText": "启运货物",
				"disableScroll": true
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#3fa89a",
		"backgroundColor": "#f5f7fb",
		"navigationStyle": "custom"
	},
	"usingComponents": {
		"mp-uploader": "weui-miniprogram/uploader/uploader"
	},
	"tabBar": {
		"color": "#000",
		"selectedColor": "#3fa89a",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/home1.png",
			"selectedIconPath": "static/home2.png",
			"text": "首页"
		}, {
			"pagePath": "pages/center/center",
			"iconPath": "static/center1.png",
			"selectedIconPath": "static/center2.png",
			"text": "我的"
		}]
	}
}
